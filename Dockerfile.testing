# Flutter Testing Container
# This Dockerfile creates an environment similar to GitHub Actions runners
FROM ubuntu:22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV FLUTTER_ROOT=/opt/flutter
ENV PATH="$FLUTTER_ROOT/bin:$FLUTTER_ROOT/bin/cache/dart-sdk/bin:$PATH"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    unzip \
    xz-utils \
    zip \
    libglu1-mesa \
    openjdk-17-jdk \
    python3 \
    python3-pip \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Flutter
RUN git clone https://github.com/flutter/flutter.git $FLUTTER_ROOT
RUN flutter config --no-analytics
RUN flutter doctor

# Install pre-commit
RUN pip3 install pre-commit

# Create workspace directory
WORKDIR /workspace

# Copy project files
COPY . .

# Install project dependencies
RUN flutter pub get

# Default command
CMD ["flutter", "doctor"]
